{
    "name": "ekoh/blog-post",
    "description": "A simple blog package in php",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "role": "Author",
            "name": "Ekoh Franklin",
            "email": "ekohfranklin@gmail.com",
            "homepage": "https://github.com/franklinekoh/"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": false,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "autoload": {
        "psr-4": {
            "Practice\\BlogPost\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Practice\\BlogPost\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.0",
        "fakerphp/faker": "^1.17"
    },
    "require-dev": {
        "pestphp/pest": "^1.21"
    },
    "scripts": {
        "analyze": "./vendor/bin/psalm --show-info=true",
        "test": "./vendor/bin/pest",
        "test-coverage": "./vendor/bin/pest --coverage"
    }
}
